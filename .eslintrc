{
  "plugins": ["filenames"],
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true
    }
  },
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "strict": 0,
    "global-require": 0,
    "import/no-unresolved": 0,
    "quotes": [2, "single"],
    "arrow-body-style": ["error", "as-needed"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-invalid-this": 0,
    "valid-jsdoc": 0,
    "comma-dangle": 0,
    "no-param-reassign": 0,
    "consistent-return": 0,
    "default-case": 0,
    "no-extra-parens": 0,
    "arrow-parens": [1, "always"],
    "no-plusplus": 0,
    "import/extensions": [1, "never"],
    "no-restricted-syntax": [1, "WithStatement"],
    "import/no-extraneous-dependencies": 0
  },
  "globals": {
    "require": true
  }
}
